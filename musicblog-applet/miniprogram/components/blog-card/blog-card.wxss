page{
  background-color:#f1f1f1;
}
.blog{
  padding:20rpx;
  background-color: #fff;
}
.header{
  display: flex;
}
/*用户头像*/
.userprofile{
  width:64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.useraddtime {
  flex: 1;
}
.user{
  font-size: 32rpx;
}
.time{
  font-size: 24rpx;
  color: #939393;
}
/*文本*/
.content{
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}
.photos{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}
.photos .photo{
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
