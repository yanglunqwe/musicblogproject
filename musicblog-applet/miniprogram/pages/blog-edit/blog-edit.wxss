.container{
  padding:20rpx;
}
.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

/*图片样式*/
.image-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.image-item{
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
  border-radius: 2%;
}
.image{
  width: 100%;
  height: 100%;
}
.photodelete{
  position:absolute;
  top:0;
  right:0;
  width: 40rpx;
  height: 40rpx;
  background-color:#000;
  opacity: 0.5;
  color:#fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}
.image-select{
  width: 210rpx;
  height: 210rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
  border: 2rpx dashed #cbd1d7;
}
.add{
  width: 200rpx;
  height: 200rpx;
  position:abosolute;
}
/*底部*/
.footer{
  display: flex;
  align-items: center;
  position: fixed;
  bottom:0;
  padding:20rpx;
  width:100%;
  box-sizing: border-box;
  background: #f1f1f1;
}
.words-nums{
  flex:1; 
  text-align: right;
  color:#474747;
  font-size:32rpx;
  padding-right: 20rpx;
}
.send-btn{
  background:#d43c33;
  color:#fff;
  font-size:24rpx;
  margin-right: 20rpx;
}