/* pages/playlist/playlist.wxss */
.header{
  display: flex;
  align-items: center;
  padding:0 20rpx;
  background-color:#fff;
  width: 100%;
  height:100rpx;
  position:fixed;
  top:0;
  left:0;
  z-index: 99;
  box-sizing:border-box;
}
.back-container{
  width:68rpx;
  height:68rpx;
  display:flex;
  align-items: center;
  justify-content: center;
} 
.back{
  width:50rpx;
  height:50rpx;
}
.search-container{
  flex:1;
}
::-webkit-scrollbar{
  display: none;
}
.imageContainer{
  position: relative;
  width:100%;
  height: 280rpx;
  /*background-color:yellow;*/
  margin:95rpx 0rpx auto;
}
swiper swiper-item{
  width:100%;
}
/* 对swipper中的图片设置样式 */
.imageContainer image{
  width: 100%;
  height: 100%;
}
.playlist-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}
.scontent{
  width: 100%;
}
